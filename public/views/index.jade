doctype html
html(lang="en")

    head
        //- utf-8
        meta(charset="UTF-8")

        //- chrome frame
        meta(content="IE=edge,chrome=1", http-equiv="X-UA-Compatible")

        //- meta description
        meta(name="description", content="Scott Lanning")

        //- meta keywords
        meta(name="keywords", content=" Scott Lanning, Front End, User Experience, User Interface, Web Developer")

        //- set viewport scale for mobile
        meta(name="viewport", content="initial-scale=1, maximum-scale=1")

        //- global css
        link(rel="stylesheet", type="text/css", href="/css/styles.css?v=#{version}")

        //- favicon
        link(rel="shortcut icon", href="/img/favicon.ico", type="image/x-icon")

        title Scott Lanning - Front End / UI / UX Engineer

    body

        header

            h1
                a(href="/") Scott Lanning

            nav

                ul
                    li
                        a(href="#about") About

                    li
                        a(href="#portfolio") Portfolio

                    li
                        a(href="#contact") Contact

        main


        //- global javascript
        script(type="text/javascript", src="/js/bundle.js?v=#{version}")