@charset "UTF-8"
@import "includes/_variables"
@import "includes/_mixins"

body
    -webkit-font-smoothing: antialiased // font smoothing webkit mac
    -moz-osx-font-smoothing: grayscale // font smoothing firefox osx
    color: #333
    font: normal normal normal $font-size/$line-height $font-family
    letter-spacing: -0.01em

h1
    font-weight: 300
    font-size: $font-size + 20
    letter-spacing: -0.01em
    margin-bottom: 30px

p
    margin-bottom: 20px
    max-width: 640px

strong
    font-weight: bold

header
    box-shadow(0px 1px 1px 0 rgba(0,0,0,0.08))
    clear()
    background: #fff
    padding: 5px 0
    position: absolute
    top: 10px
    left: 0
    width: 100%

    div
        center(1000px)

    h1
        float: left
        margin: 0

        a
            color: #000
            display: block
            font-size: $font-size + 25
            letter-spacing: -0.025em
            padding: 4px 0

        em
            color: #b8b8b8
            font-size: $font-size + 10
            padding-left: 10px
            vertical-align: middle

    nav
        float: right

    li
        float: left
        margin-left: 40px

        &:first-child
            margin-left: 0

        a
            color: #333
            display: block
            font-size: $font-size + 2
            font-weight: 300
            padding: 21px 10px

            &:hover
                color: lighten(#333, 20%)

#cover
    height: 400px
    width: 100%
    background: transparent url("/img/code.png") no-repeat scroll left top
    background-size: cover

section
    center(1000px)
    padding: 50px 0

    &.about, &.resume
        background: $primary
        width: 100%

        div
            center(1000px)

        h1, p
            color: #fff

figure
    float: left
    margin: 15px 15px 0 15px
    height: 405px
    width: 300px

    &.first
        margin-left: 0

    img
        display: block
        margin: 0 auto
        background: #ccc
        height: 180px
        width: 300px

    figcaption

        h1
            font-weight: 300
            font-size: $font-size + 4
            margin: 20px 0 10px

        p
            font-size: $font-size - 2

            &.technologies
                margin: 0